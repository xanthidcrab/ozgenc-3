<Window x:Class="MVVMapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMapp"
        
        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:ProfilViewModel />
    </Window.DataContext>
    <Grid>
        <ListBox ItemsSource="{Binding Profils}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedProfil}" />
        <TextBlock Text="{Binding SelectedProfil.Name}" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="24"/>
    </Grid>
</Window>
